generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  name      String
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  orgId       String?
  org         Org?          @relation(fields: [orgId], references: [id])
  memberships BoardMember[]
  refreshTokens RefreshToken[]

  @@index([email])
}

model Org {
  id        String   @id @default(uuid())
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  users  User[]
  boards Board[]
}

model Board {
  id        String   @id @default(uuid())
  name      String
  lastSeq   Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  orgId String?
  org   Org?    @relation(fields: [orgId], references: [id])

  members   BoardMember[]
  ops       BoardOp[]
  snapshots BoardSnapshot[]

  @@index([orgId])
}

model BoardMember {
  id     String @id @default(uuid())
  role   String @default("VIEWER")  // OWNER | EDITOR | VIEWER
  userId String
  boardId String

  user  User  @relation(fields: [userId], references: [id], onDelete: Cascade)
  board Board @relation(fields: [boardId], references: [id], onDelete: Cascade)

  @@unique([userId, boardId])
  @@index([boardId])
}

model BoardOp {
  id        String   @id @default(uuid())
  boardId   String
  serverSeq Int
  opId      String   // Client-generated idempotency key
  clientId  String   // User session/connection ID
  opType    String   // 'create', 'update', 'delete'
  opData    Json     // Full operation payload
  createdAt DateTime @default(now())

  board Board @relation(fields: [boardId], references: [id], onDelete: Cascade)

  @@unique([boardId, opId, clientId])
  @@index([boardId, serverSeq])
}

model BoardSnapshot {
  id        String   @id @default(uuid())
  boardId   String
  seq       Int      // Sequence number at time of snapshot
  items     Json     // Complete board state
  itemOrder Json     // Item order array
  createdAt DateTime @default(now())

  board Board @relation(fields: [boardId], references: [id], onDelete: Cascade)

  @@index([boardId, seq])
}

model RefreshToken {
  id        String   @id @default(uuid())
  token     String   @unique
  userId    String
  expiresAt DateTime
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([token])
}
