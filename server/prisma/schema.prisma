generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
}

model User {
  id            String         @id @default(uuid())
  email         String         @unique
  name          String
  password      String
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
  orgId         String?
  memberships   BoardMember[]
  refreshTokens RefreshToken[]
  org           Org?           @relation(fields: [orgId], references: [id])

  @@index([email])
}

model Org {
  id        String   @id @default(uuid())
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  boards    Board[]
  users     User[]
}

model Board {
  id              String          @id @default(uuid())
  name            String
  lastSeq         Int             @default(0)
  requireApproval Boolean         @default(false)
  createdAt       DateTime        @default(now())
  updatedAt       DateTime        @updatedAt
  orgId           String?
  org             Org?            @relation(fields: [orgId], references: [id])
  members         BoardMember[]
  ops             BoardOp[]
  snapshots       BoardSnapshot[]

  @@index([orgId])
}

model BoardMember {
  id      String @id @default(uuid())
  role    String @default("VIEWER")
  userId  String
  boardId String
  board   Board  @relation(fields: [boardId], references: [id], onDelete: Cascade)
  user    User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, boardId])
  @@index([boardId])
}

model BoardOp {
  id        String   @id @default(uuid())
  boardId   String
  serverSeq Int
  opId      String
  clientId  String
  opType    String
  opData    Json
  createdAt DateTime @default(now())
  board     Board    @relation(fields: [boardId], references: [id], onDelete: Cascade)

  @@unique([boardId, opId, clientId])
  @@index([boardId, serverSeq])
}

model BoardSnapshot {
  id        String   @id @default(uuid())
  boardId   String
  seq       Int
  items     Json
  itemOrder Json
  createdAt DateTime @default(now())
  board     Board    @relation(fields: [boardId], references: [id], onDelete: Cascade)

  @@index([boardId, seq])
}

model RefreshToken {
  id        String   @id @default(uuid())
  token     String   @unique
  userId    String
  expiresAt DateTime
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([token])
}
